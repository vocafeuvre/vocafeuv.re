---
import DefaultLayout from './DefaultLayout.astro'

const { frontmatter } = Astro.props

if (!Astro.cookies.get('visitor-id')) {
  Astro.cookies.set('visitor-id', crypto.randomUUID(), {
    httpOnly: true,
    secure: true,
    sameSite: 'strict',
    path: '/',
  })
}
---

<DefaultLayout title={frontmatter.title}>
  <div class="container">
    <div class="space-content my-12">
      <slot />
    </div>
  </div>
</DefaultLayout>
