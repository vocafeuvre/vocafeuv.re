  <script>
    const chatButton = document.querySelector('#_chat_button')
    const chatContainer = document.querySelector('#_chat_container')
    const chatText = document.querySelector('#_chat_text')
    const chatCursor = document.querySelector('#_chat_cursor') as HTMLElement
    const chatCloseButton = document.querySelector('#_chat_close')
    let chatVisible = false
    let typingInterval: any

    chatButton?.addEventListener('click', () => {
      chatVisible = !chatVisible
      if (chatContainer) {
        chatContainer.classList.toggle('hidden')
      }
    })

    chatButton?.addEventListener('mouseenter', () => {
      if (chatText && chatCursor) {
        chatCursor.classList.remove('hidden')

        const text = 'Chat with me'
        let index = 0
        chatText.textContent = ''

        // Clear any existing interval
        if (typingInterval) {
          clearInterval(typingInterval)
        }

        // Start typing effect
        typingInterval = setInterval(() => {
          if (index < text.length) {
            chatText.textContent += text[index]
            index++
          } else {
            if (typingInterval) {
              clearInterval(typingInterval)
            }
          }
        }, 100)

        // Show and animate cursor
        chatCursor.style.opacity = '1'
        chatCursor.animate(
          [
            { opacity: 1, offset: 0 },
            { opacity: 0, offset: 0.5 },
            { opacity: 1, offset: 1 },
          ],
          {
            duration: 1000,
            iterations: Infinity,
          }
        )
      }
    })

    chatButton?.addEventListener('mouseleave', () => {
      if (chatText && chatCursor) {
        chatText.textContent = ''
        chatCursor.style.opacity = '0'
        chatCursor.classList.add('hidden')
        if (typingInterval) {
          clearInterval(typingInterval)
        }
      }
    })

    chatCloseButton?.addEventListener('click', () => {
      chatVisible = false
      if (chatContainer) {
        chatContainer.classList.add('hidden')
      }
    })
