  faNodeJs,
  faHtml5,
  faCss,
  faJs,
  faGitAlt,
  faLinkedin,
  faPhp,
  faRust,
  faSass,
  faLaravel,
  faReact,
} from '@fortawesome/free-brands-svg-icons'
import { faGlobe } from '@fortawesome/free-solid-svg-icons'
import ResponsiveToggle from '../components/ResponsiveToggle.astro'
import { DarkMode } from 'accessible-astro-components'
import {
  faCode,
  faProjectDiagram,
  faPeopleGroup,
  faMobile,
  faRobot,
  faWindowMaximize,
  faDatabase,
  faGears,
  faBuildingColumns,
  faServer,
  faDesktop,
} from '@fortawesome/free-solid-svg-icons'

// Add icons to library
library.add(
  faGithub,
  faLinkedin,
  faGlobe,
  faCode,
  faProjectDiagram,
  faPeopleGroup,
  faMobile,
  faJs,
  faNodeJs,
  faHtml5,
  faGitAlt,
  faCss,
  faRobot,
  faWindowMaximize,
  faPhp,
  faRust,
  faDatabase,
  faSass,
  faLaravel,
  faReact,
  faGears,
  faBuildingColumns,
  faServer,
  faDesktop
)

// Create the icon HTML elements
const githubIcon = icon(faGithub).html
const linkedinIcon = icon(faLinkedin).html
const globeIcon = icon(faGlobe).html
const codeIcon = icon(faCode).html
const projectIcon = icon(faProjectDiagram).html
const teamIcon = icon(faPeopleGroup).html
const mobileIcon = icon(faMobile).html
const jsIcon = icon(faJs).html
const nodeIcon = icon(faNodeJs).html
const htmlIcon = icon(faHtml5).html
const gitIcon = icon(faGitAlt).html
const cssIcon = icon(faCss).html
const robotIcon = icon(faRobot).html
const windowIcon = icon(faWindowMaximize).html
const dbIcon = icon(faDatabase).html
const reactIcon = icon(faReact).html
const gearsIcon = icon(faGears).html
const serverIcon = icon(faServer).html
const desktopIcon = icon(faDesktop).html
