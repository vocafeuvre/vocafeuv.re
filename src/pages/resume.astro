  <script>
    const prefixElement = document.getElementById('_prefix')
    const cursorElement = document.getElementById('_cursor')
    if (!prefixElement || !cursorElement) throw new Error('Required elements not found')

    const prefixes = JSON.parse(prefixElement.closest('[data-prefixes]')?.getAttribute('data-prefixes') || '[]')
    let currentPrefixIndex = 0
    let currentText = ''
    let isDeleting = false
    let cursorVisible = true

    function typeText() {
      const currentPrefix = prefixes[currentPrefixIndex]

      if (isDeleting) {
        currentText = currentPrefix.substring(0, currentText.length - 1)
      } else {
        currentText = currentPrefix.substring(0, currentText.length + 1)
      }

      prefixElement.textContent = currentText
      // Update cursor position to end of text
      const textWidth = prefixElement.offsetWidth
      cursorElement.style.left = `${textWidth}px`

      let typeSpeed = 50

      if (isDeleting) {
        typeSpeed /= 2
      }

      if (!isDeleting && currentText === currentPrefix) {
        typeSpeed = 2000 // Pause at end of typing
        isDeleting = true
      } else if (isDeleting && currentText === '') {
        isDeleting = false
        currentPrefixIndex = (currentPrefixIndex + 1) % prefixes.length
        typeSpeed = 1000 // Pause before typing next
      }

      setTimeout(typeText, typeSpeed)
    }

    // Add cursor blink effect
    setInterval(() => {
      cursorVisible = !cursorVisible
      cursorElement.style.opacity = cursorVisible ? '1' : '0'
    }, 530) // Blink every 530ms

    // Start the typing animation
    typeText()

    const nameVisibleBtn = document.getElementById('_name_visible')
    if (!nameVisibleBtn) throw new Error('Name visible button not found')
    const nameElement = document.getElementById('_name')
    if (!nameElement) throw new Error('Name element not found')

    const eyeIcon = nameVisibleBtn.getAttribute('data-eye')
    const eyeSlashIcon = nameVisibleBtn.getAttribute('data-eye-slash')

    nameVisibleBtn.addEventListener('click', () => {
      const isVisible = nameVisibleBtn.innerHTML === eyeIcon
      nameVisibleBtn.innerHTML = isVisible ? eyeSlashIcon : eyeIcon
      nameElement.textContent = isVisible ? 'vocafeuvre' : 'Ralph Villanueva'

      // Toggle button color classes based on visibility state
      if (isVisible) {
        nameVisibleBtn.classList.remove('!text-secondary-500')
        nameVisibleBtn.classList.add('!text-neutral-500')
        nameVisibleBtn.classList.remove('hover:!text-secondary-700')
        nameVisibleBtn.classList.add('hover:!text-neutral-700')
        nameVisibleBtn.classList.remove('dark:!text-secondary-400')
        nameVisibleBtn.classList.add('dark:!text-neutral-400')
        nameVisibleBtn.classList.remove('dark:hover:!text-secondary-100')
        nameVisibleBtn.classList.add('dark:hover:!text-neutral-100')
      } else {
        nameVisibleBtn.classList.remove('!text-neutral-500')
        nameVisibleBtn.classList.add('!text-secondary-500')
        nameVisibleBtn.classList.remove('hover:!text-neutral-700')
        nameVisibleBtn.classList.add('hover:!text-secondary-700')
        nameVisibleBtn.classList.remove('dark:!text-neutral-400')
        nameVisibleBtn.classList.add('dark:!text-secondary-400')
        nameVisibleBtn.classList.remove('dark:hover:!text-neutral-100')
        nameVisibleBtn.classList.add('dark:hover:!text-secondary-100')
      }
    })
  </script>
