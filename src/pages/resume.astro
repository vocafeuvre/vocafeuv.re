  <style lang="scss" is:global>
    @use '../assets/scss/base/breakpoint' as *;
    @use '../assets/scss/base/outline' as *;

    #main-navigation {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      z-index: 100;

      > .container {
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;
      }

      .wrapper {
        display: flex;
        align-items: center;
