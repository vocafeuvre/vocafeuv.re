        width: 100%;
      }
    }

    .darkmode-toggle {
      padding: 0;
      border: none;

      svg {
        width: 30px;
        margin-top: 4px;
      }

      svg path {
        fill: var(--action-color);
      }

      &:hover {
        svg path {
          fill: var(--action-color-state);
        }
      }

      &:focus {
        @include outline;

        &:not(:focus-visible) {
          outline: none;
          box-shadow: none;
        }
      }
    }
  </style>
